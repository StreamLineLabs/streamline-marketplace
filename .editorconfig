# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Rust files
[*.rs]
indent_size = 4

# TOML files (Cargo.toml, deny.toml, etc.)
[*.toml]
indent_size = 4

# YAML files (GitHub Actions, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_size = 2
